{
    "name": "web",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "clean": "rimraf ./dist",
        "preview": "vite preview",
        "lint": "eslint src",
        "format": "npm run format-eslint && concurrently npm:format:*",
        "format-eslint": "eslint \"**/*.{j,t}s{,x}\" --fix",
        "format:js": "prettier --write \"**/*.js{,x}\" --no-error-on-unmatched-pattern",
        "format:ts": "prettier --write \"**/*.ts{,x}\" --no-error-on-unmatched-pattern",
        "format:json": "prettier --write \"**/*.json\" --no-error-on-unmatched-pattern",
        "format:md": "prettier --write \"**/*.md\" --no-error-on-unmatched-pattern",
        "prepare": "cd .. && husky install web/.husky"
    },
    "dependencies": {
        "lodash-es": "^4.17.21",
        "preact": "^10.11.3",
        "uplot": "^1.6.23"
    },
    "devDependencies": {
        "@babel/core": "^7.20.7",
        "@preact/preset-vite": "^2.4.0",
        "@trivago/prettier-plugin-sort-imports": "^4.0.0",
        "@types/lodash-es": "^4.17.6",
        "@typescript-eslint/eslint-plugin": "^5.47.0",
        "@typescript-eslint/parser": "^5.47.0",
        "concurrently": "^7.6.0",
        "eslint": "^8.30.0",
        "eslint-config-preact": "^1.3.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^8.0.2",
        "lint-staged": "^13.1.0",
        "msw": "^0.49.2",
        "prettier": "^2.8.1",
        "rimraf": "^3.0.2",
        "typescript": "^4.9.3",
        "vite": "^4.0.0",
        "vite-plugin-checker": "^0.5.3",
        "vite-plugin-compression2": "^0.4.1",
        "vite-plugin-html": "^3.2.0",
        "vite-plugin-imagemin": "^0.6.1",
        "vite-plugin-svgo": "^1.2.0"
    },
    "msw": {
        "workerDirectory": "public"
    },
    "pnpm": {
        "patchedDependencies": {
            "msw@0.49.2": "patches/msw@0.49.2.patch"
        },
        "peerDependencyRules": {
            "ignoreMissing": [
                "react",
                "@vue/compiler-sfc"
            ]
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*": "prettier --ignore-unknown --write"
    }
}
